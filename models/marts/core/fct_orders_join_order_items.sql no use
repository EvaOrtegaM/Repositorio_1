WITH stg_orders AS (
    SELECT * 
    FROM {{ ref('stg_sql_server_dbo_orders') }}
),

stg_orders_items AS (
    SELECT * 
    FROM {{ ref('stg_sql_server_dbo_order_items') }}
),

renamed_casted AS (
    SELECT
        order_id 
        , o.user_id 
        , o.promo_id
        , o.address_id
        , i.product_id
        , i.quantity       
        , o.order_created_at_utc
        , o.order_cost_usd
        , o.shipping_cost_usd
        , o.total_order_cost_usd
        , o.shipping_service
        , o.status_order        
        , o.estimated_delivery_at_utc
        , o.delivered_at_utc
		, DATEDIFF(day, o.order_created_at_utc, o.delivered_at_utc) AS days_to_deliver
        , o.tracking_id
        , o.date_load

    FROM stg_orders o
    join stg_orders_items i using (order_id)
    )

SELECT * FROM renamed_casted